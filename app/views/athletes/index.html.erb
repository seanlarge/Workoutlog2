<h1>Listing athletes</h1>

<table>
  <thead>
    <tr>
      <th>Age</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Body mass index</th>
      <th>Blood pressure</th>
      <th>Cholesterol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @athletes.each do |athlete| %>
      <tr>
        <td><%= athlete.age %></td>
        <td><%= athlete.height %></td>
        <td><%= athlete.weight %></td>
        <td><%= athlete.body_mass_index %></td>
        <td><%= athlete.blood_pressure %></td>
        <td><%= athlete.cholesterol %></td>
        <td><%= link_to 'Show', athlete %></td>
        <td><%= link_to 'Edit', edit_athlete_path(athlete) %></td>
        <td><%= link_to 'Destroy', athlete, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

