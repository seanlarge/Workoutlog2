<% wod ||= @wod %>

<%= form_for(wod) do |f| %>
  <% if wod.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(wod.errors.count, "error") %> prohibited this wod from being saved:</h2>

      <ul>
      <% wod.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.hidden_field :athlete_id %>
    <%= f.fields_for(:movements, ) do |wm| %>
