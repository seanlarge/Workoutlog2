  <% end %>

  <div class="field">
    <%= f.label :score %><br>
    <%= f.text_field :score %>
  </div>

  <div class="field">
    <%= f.label :pr %><br>
    <%= f.check_box :pr %>
  </div>

  <div class="field">
    <%= f.label :benchmark %><br>
    <%= f.check_box :benchmark %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
